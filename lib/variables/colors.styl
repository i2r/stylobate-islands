$islands ?= {}

$islands["colors"] = {
  text: #000,
  misc: rgba-ie(#000, 0.5),
  focus: rgba-ie(#FC0, 0.7),
  error: rgba-ie(#F00, 0.7),
  selected: rgba-ie(#FFC100, 0.37),

  bg: {
    page: #F6F5F3,
    main: #FFF
  }
}

$islands_bg_page ?= $islands.colors.bg.page
$islands_bg_main ?= $islands.colors.bg.main

$islands_color_text ?= $islands.colors.text
$islands_color_text_misc ?= $islands.colors.misc

$islands_color_focus ?= $islands.colors.focus
$islands_color_error ?= $islands.colors.error
$islands_color_selected ?= $islands.colors.selected
