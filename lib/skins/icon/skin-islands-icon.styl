skin-islands-icon($this)
  if $this.params.with-hover
    @extends $skin-islands-icon_with-hover

skin-islands-icon_remove()
  @extends $skin-islands-icon_remove

$skin-islands-icon_remove
  kind: icon (size 16px 16px) "data:image/svg+xml;base64,"

skin-islands-icon_notification()
  @extends $skin-islands-icon_notification

$skin-islands-icon_notification
  kind: icon

  height: 15px
  min-width: 9px
  padding: 0 3px
  border: 2px solid #FFF

  text-align: center

  font-size: 13px
  line-height: 15px
  font-weight: bold

  color: #FFF
  background: #F00
  border-radius: 1em

  box-shadow: 0 1px 0 1px rgba(#000, 0.1),
              0 5px 10px -5px rgba(#000, 0.5)

skin-islands-icon_dropdown($this)
  skin-islands-icon_arrow($this)

  if $this.params.selecty
    float: right

    if $this.params.small
      top: 0.58em
    else
      top: 0.7em

    left: -4px
    margin-right: -1*$islands_xs
    margin-left: $islands_s

skin-islands-icon_arrow($this)
  if !ie
    $size = $this.params.size or $this.units[0] or 6px
    kind: icon ('size' $size)

    $width = $this.params.width or 2px
    border-bottom: $width solid
    border-right: $width solid
    margin-top: -0.33em

    $color = $this.colors[0] or inherit
    unless $color == inherit
      color: $color

    if $this.params.with-transition
      transition: transform 0.3s

  if ie
    width: 0
    height: 0

  skin-islands-icon_arrow-direction($this)

skin-islands-icon_arrow-direction($this)
  if !ie
    $angle = 45deg
    // Here and later we do not need to look at the parents, so â€” arguments.
    if top in $this.arguments
      $angle = -135deg

    else if right in $this.arguments
      $angle = -45deg

    else if left in $this.arguments
      $angle = 135deg

    $offset-x = $this.params.offset-x
    if $offset-x
      $offset-x = 'translateX(%s)'% $offset-x

    $offset-y = $this.params.offset-y
    if $offset-y
      $offset-y = 'translateY(%s)'% $offset-y

    transform: $offset-x $offset-y scale(0.75) rotate($angle)

  if ie
    $size = $this.params.size or $this.units[0] or 6px
    border: $size solid

    if $this.params.left || $this.params.right
      border-top-color: transparent
      border-bottom-color: transparent

      if $this.params.right
        border-left-width: 0
      else
        border-right-width: 0
    else
      border-right-color: transparent
      border-left-color: transparent

      if $this.params.top
        border-top-width: 0
      else
        border-bottom-width: 0

skin-islands-icon_check($this)
  if $this.params.absolute
    position: absolute
    top: 50%
    left: 50%
    margin: -13px 0 0 -2px
  else
    kind: icon
    margin: -3px 3px 1px

  width: 5px
  height: 13px
  border-bottom: 3px solid
  border-right: 3px solid

  color: #000

  transform: scale(0.9) rotate(50deg) skewX(12deg)

$skin-islands-icon_with-hover
  cursor: pointer
  opacity: 0.2

  &:hover
    opacity: 1
