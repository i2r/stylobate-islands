skin-islands-icon($this)
  if with-hover in $this.arguments
    @extends $skin-islands-icon_with-hover

skin-islands-icon_remove()
  @extends $skin-islands-icon_remove

$skin-islands-icon_remove
  kind: icon (size 16px 16px) "data:image/svg+xml;base64,"

skin-islands-icon_notification()
  @extends $skin-islands-icon_notification

$skin-islands-icon_notification
  kind: icon

  height: 15px
  min-width: 9px
  padding: 0 3px
  border: 2px solid #FFF

  text-align: center

  font-size: 13px
  line-height: 15px
  font-weight: bold

  color: #FFF
  background: #F00
  border-radius: 1em

  box-shadow: 0 1px 0 1px rgba(#000, 0.1),
              0 5px 10px -5px rgba(#000, 0.5)

skin-islands-icon_dropdown($this)
  skin-islands-icon_arrow($this)

  if selecty in $this.arguments
    float: right

    if small in $this.arguments
      top: 0.58em
    else
      top: 0.7em

    left: -4px
    margin-right: -1*$islands_xs
    margin-left: $islands_s

skin-islands-icon_arrow($this)
  if !ie
    $size = utilus_get($this.arguments, 'size') or $this.units[0] or 6px
    kind: icon (size $size)

    $width = utilus_get($this.arguments, 'width', 2px)
    border-bottom: $width solid
    border-right: $width solid
    margin-top: -0.33em

    $color = $this.colors[0] or inherit
    unless $color == inherit
      color: $color

    if with-transition in $this.arguments
      transition: transform 0.3s

  if ie
    width: 0
    height: 0

  skin-islands-icon_arrow-direction($this)

skin-islands-icon_arrow-direction($this)
  if !ie
    $angle = 45deg
    if top in $this.arguments
      $angle = -135deg

    else if right in $this.arguments
      $angle = -45deg

    else if left in $this.arguments
      $angle = 135deg

    $offset-x = utilus_get($this.arguments, 'offset-x', '')
    if $offset-x
      $offset-x = 'translateX(%s)'% $offset-x

    $offset-y = utilus_get($this.arguments, 'offset-y', '')
    if $offset-y
      $offset-y = 'translateY(%s)'% $offset-y

    transform: unquote($offset-x) unquote($offset-y) scale(0.75) rotate($angle)

  if ie
    $size = utilus_get($this.arguments, 'size') or $this.units[0] or 6px
    border: $size solid

    if left in $this.arguments || right in $this.arguments
      border-top-color: transparent
      border-bottom-color: transparent

      if right in $this.arguments
        border-left-width: 0
      else
        border-right-width: 0
    else
      border-right-color: transparent
      border-left-color: transparent

      if top in $this.arguments
        border-top-width: 0
      else
        border-bottom-width: 0

skin-islands-icon_check($this)
  if absolute in $this.arguments
    position: absolute
    top: 50%
    left: 50%
    margin: -13px 0 0 -2px
  else
    kind: icon
    margin: -3px 3px 1px

  width: 5px
  height: 13px
  border-bottom: 3px solid
  border-right: 3px solid

  color: #000

  transform: scale(0.9) rotate(50deg) skewX(12deg)

$skin-islands-icon_with-hover
  cursor: pointer
  opacity: 0.2

  &:hover
    opacity: 1
