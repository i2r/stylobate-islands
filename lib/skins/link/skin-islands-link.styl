skin-islands-link($this)
  // Shoulf find out how to merge arguments
  $underline = ''
  unless underline in $this.arguments
    $underline = (_underline '')

  $hover = (_hover '')
  unless no-hover in $this.arguments
    $hover = (_hover '&:hover' $this.colors[1] or #D00)

  $pseudo = ''
  if pseudo in $this.arguments
    $pseudo = _pseudo

  if nested in $this.arguments
    if underline in $this.arguments
      kind: link_underline
    if pseudo in $this.arguments
      kind: link_pseudo
  else
    kind: link ($this['colors'][0] or #22C) $underline $hover $pseudo

  if fix-gaps in $this.arguments
    background: linear-gradient(rgba(#000, 0), rgba(#000, 0)) no-repeat
    background-size: 16px 16px

skin-islands-outer-link($this)
  global_skin: islands-link #070 $this.idents[0]

skin-islands-pseudo-link($this)
  global_skin: islands-link pseudo $this.idents[0]

skin-islands-link_selected()
  color: #000
  cursor: default

