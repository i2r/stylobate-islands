skin-islands-group()
  kind: group

$skin-islands-group
  &:before
    right: 0

  input&,
  label&
    border-right-color: transparent

$skin-islands-group_vertical
  &:before
    bottom: 0

  input&,
  label&
    border-bottom-color: transparent

skin-islands-group-start()
  kind: group-start '&,&:before' (vertical in arguments ? vertical : false)

  $placeholder = vertical in arguments ? '$skin-islands-group_vertical' : '$skin-islands-group'
  @extends {$placeholder}

skin-islands-group-middle()
  kind: group-middle '&,&:before' (vertical in arguments ? vertical : false)

  $placeholder = vertical in arguments ? '$skin-islands-group_vertical' : '$skin-islands-group'
  @extends {$placeholder}

skin-islands-group-end()
  kind: group-end '&,&:before' (vertical in arguments ? vertical : false)

skin-islands-group-item()
  &:first-child:not(:only-child)
    skin-islands-group-start(arguments)

  &:not(:first-child):not(:last-child)
    skin-islands-group-middle(arguments)

  &:last-child:not(:only-child)
    skin-islands-group-end(arguments)

skin-islands-nested-group-item()
  $nested-group-item = alike(arguments, '.toggler-view')
  kind: group-item ('& > ' + $nested-group-item + ', & > ' + $nested-group-item + ':before') (vertical in arguments ? vertical : false)

  &:not(:last-child):not(:only-child) > {$nested-group-item}
    $placeholder = vertical in arguments ? '$skin-islands-group_vertical' : '$skin-islands-group'
    @extends {$placeholder}

