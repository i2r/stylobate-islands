skin-islands-pseudo-button()
  skin-islands-check-font()

  position: relative

  $align = utilus_retrieve(arguments, middle top bottom, baseline)
  $align = middle if ie and $align == baseline
  vertical-align: $align

  color: $islands_color_text

  border-radius: 3px
  box-shadow: inset 0 0 0 1px rgba(#000, 0.2)

  if ie
    border: 1px solid #CBCBCB

  &:before
    content: ""
    kind: fill 1px
    border-radius: 2px

  // So it would overlay anything inside
  &:after
    content: ""
    kind: fill

  & { utilus_alike(arguments, $skin-islands-button-content) }
    kind: block

  if small in arguments
    skin-islands-para2(no-margin)
    if !ie
      padding: ($islands_xs - 0.3*rem) $islands_s
    else
      padding: ($islands_xs - 0.4*rem) ($islands_s - 0.1*rem)
  else
    skin-islands-para(no-margin)
    if !ie
      padding: ($islands_xs - 0.3*rem) ($islands_s + 0.1*rem)
    else
      padding: ($islands_xs - 0.4*rem) $islands_s

  stylobate_defaults(arguments,
    _hover '&:hover',
    _focus '&:focus')

skin-islands-pseudo-button_hover()
  box-shadow: inset 0 0 0 1px rgba(#000, 0.35)

skin-islands-pseudo-button_focus()
  box-shadow: inset 0 0 0 1px rgba(#000, 0.35)

  skin-islands-button_focus(arguments)

skin-islands-pseudo-button_inverted()
  color: darken(invert($islands_color_text), 10%)

  box-shadow: inset 0 0 0 1px rgba(#FFF, 0.3)

  if ie
    border: 1px solid invert(#CBCBCB)

  stylobate_defaults(arguments,
    _hover '&:hover' _inverted,
    _focus '&:focus' _inverted)

skin-islands-pseudo-button_inverted_hover()
  box-shadow: inset 0 0 0 1px rgba(#FFF, 0.5)

skin-islands-pseudo-button_inverted_focus()
  box-shadow: inset 0 0 0 1px rgba(#FFF, 0.5)
