skin-islands-checkbox()
  if !ie
    global_skin(islands-button no-active retrieve(arguments, sizeless, adaptive) (_hover ''))
    vertical-align: middle

    text-align: center

  margin-right: $islands_xs

  unless ie or (no-elements in arguments)
    stylobate_defaults(arguments,
      -icon '& > &-icon')

  deprecate(arguments, no-elements)

skin-islands-checkbox-icon()
  if !ie
    skin-islands-icon_check(absolute)

    // Find out if there is any way to make this easier?
    input:not(:checked) + &
      visibility: hidden
